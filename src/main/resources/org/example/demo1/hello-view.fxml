                  <TableColumn fx:id="columPip" prefWidth="75.0" style="-fx-background-color: #DAA520;" text="ПІП" />
                  <TableColumn fx:id="columPhone" prefWidth="75.0" style="-fx-background-color: #DAA520;" text="Телефон" />
