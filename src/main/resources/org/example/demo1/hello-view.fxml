            <Button fx:id="btnOpen" minHeight="35.0" minWidth="110.0" mnemonicParsing="false" onAction="#openDialog" text="Добавити" HBox.hgrow="ALWAYS">
               <effect>
                  <Reflection fraction="0.0" />
               </effect>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="editbtn"  mnemonicParsing="false" prefHeight="35.0" prefWidth="110.0" text="Редагувати" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleDelete" prefHeight="35.0" prefWidth="110.0" text="Видалити" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="100.0" spacing="50.0" VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="searchField" onAction="#handleSearch" opacity="0.67" prefHeight="2.0" prefWidth="275.0" promptText="Дані про користувача" HBox.hgrow="ALWAYS">
