                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </AnchorPane>
      <HBox alignment="CENTER" prefHeight="62.0" prefWidth="579.0" spacing="100.0">
         <children>
            <Label fx:id="lableCount" prefHeight="26.0" prefWidth="115.0">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <Button fx:id="otherLabs" mnemonicParsing="false" onAction="#openOtherLabs" prefHeight="36.0" prefWidth="92.0" text="Other Labs">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
            <Button fx:id="exitbtn" mnemonicParsing="false" onAction="#closeWindow" prefHeight="34.0" prefWidth="94.0" text="Вихід">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label fx:id="label" prefHeight="18.0" prefWidth="151.0" />
   </children>
</VBox>
