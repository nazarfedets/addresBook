<VBox maxHeight="200.0" maxWidth="600.0" minHeight="200.0" minWidth="600.0" prefHeight="200.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo1.SecondController">
   <children>
      <HBox alignment="CENTER" minHeight="100.0" minWidth="600.0" prefHeight="100.0" prefWidth="600.0" spacing="50.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="73.0" text="ПІП" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtpib" minHeight="25.0" minWidth="60.0" prefHeight="25.0" prefWidth="220.0" />
            <Button fx:id="okButton" onAction="#actionSave" minHeight="20.0" minWidth="60.0" mnemonicParsing="false" text="ок" />
         </children></HBox>
      <HBox alignment="CENTER" minHeight="100.0" minWidth="600.0" prefHeight="100.0" prefWidth="600.0" spacing="50.0" VBox.vgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="28.0" prefWidth="82.0" text="Телефон" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtphone" prefHeight="25.0" prefWidth="220.0" />
